@model List<Library_Management_System.Models.Book>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Create";
}


<h2>@ViewData["Title"]</h2>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <!-- Book Cover Image -->
                <img src="~/images/covers/@book.CoverImagePath" class="card-img-top" alt="@book.Title" width="100%" height="300" />
                <div class="card-body">
                    <!-- Book Details -->
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text"><strong>Author:</strong> @book.Author</p>
                    <p class="card-text"><strong>Category:</strong> @book.Category</p>
                    <p class="card-text"><strong>Available Copies:</strong> @book.AvailableCopies</p>

                    <!-- Borrow Button -->
                    <a asp-area="UserArea"
                       asp-controller="BookLoan"
                       asp-action="BorrowCreate"
                       asp-route-id="@book.BookId"
                       class="btn btn-sm btn-primary">
                        Borrow
                    </a>


                </div>

            </div>
        </div>
    }
</div>
