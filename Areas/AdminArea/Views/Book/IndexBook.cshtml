@model IEnumerable<Library_Management_System.Models.Book>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}


<h2 class="my-3">Book List</h2>

<p>
    <a asp-action="CreateBook" class="btn btn-primary mb-3">Add New Book</a>
</p>

<table class="table table-bordered table-striped text-center align-middle" id="BookTable">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publisher</th>
            <th>Published Date</th>
            <th>Category</th>
            <th>Cover</th>
            <th>Total Copies</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
<!-- ✅ Modal for Book Details (Place inside this View) -->
<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookDetailsLabel">Book Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="bookDetailsContent">
                <!-- AJAX content will be loaded here -->
            </div>
        </div>
    </div>
</div>


