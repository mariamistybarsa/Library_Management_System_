@model Library_Management_System.Models.Book

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Book";
}

<h2 class="mb-4 text-primary fw-bold">Create New Book</h2>

<form asp-action="CreateBook" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row g-3">

        <div class="col-md-6">
            <label asp-for="Title" class="form-label fw-semibold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter book title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Author" class="form-label fw-semibold"></label>
            <input asp-for="Author" class="form-control" placeholder="Enter author name" required />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ISBN" class="form-label fw-semibold"></label>
            <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN number" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Publisher" class="form-label fw-semibold"></label>
            <input asp-for="Publisher" class="form-control" placeholder="Enter publisher name" />
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PublishedDate" class="form-label fw-semibold"></label>
            <input asp-for="PublishedDate" type="date" class="form-control" />
            <span asp-validation-for="PublishedDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
            <select asp-for="CategoryId" class="form-select" required>
                <option value="">-- Select Category --</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TotalCopies" class="form-label fw-semibold"></label>
            <input asp-for="TotalCopies" type="number" min="0" class="form-control" placeholder="Total copies available" required />
            <span asp-validation-for="TotalCopies" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="AvailableCopies" class="form-label fw-semibold"></label>
            <input asp-for="AvailableCopies" type="number" min="0" class="form-control" placeholder="Available copies" required />
            <span asp-validation-for="AvailableCopies" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label class="form-label fw-semibold">Book Image</label>
            <input type="file" name="image" class="form-control" accept="image/*" />
        </div>

    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success me-2 px-4">Create</button>
        <a asp-action="IndexBook" class="btn btn-outline-secondary px-4">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bootstrap custom validation styles
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
